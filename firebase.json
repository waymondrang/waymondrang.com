{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "redirects": [
            {
                "source": "/docsafterdark/**",
                "destination": "https://docsafterdark.com/",
                "type": 301
            },
            {
                "source": "/github",
                "destination": "https://github.com/waymondrang",
                "type": 301
            },
            {
                "source": "/linkedin",
                "destination": "https://www.linkedin.com/in/waymondrang/",
                "type": 301
            },
            {
                "source": "/chess",
                "destination": "https://chesster.waymondrang.com/",
                "type": 301
            },
            {
                "source": "/postboard",
                "destination": "https://postboard.waymondrang.com/",
                "type": 301
            }
        ],
        "rewrites": [
            {
                "source": "/resume",
                "destination": "/assets/Raymond J. Wang Resume.pdf"
            }
        ]
    },
    "emulators": {
        "hosting": {
            "host": "localhost",
            "port": 5500
        }
    }
}
